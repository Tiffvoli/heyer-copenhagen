            },
            {
                "type": "text",
                "id": "buttonText",
                "label": "buttonText"
            },
            {
                "type": "url",
                "id": "buttonLink",
                "label": "buttonLink"
            },
            {
                "type": "header",
                "content": "Images"
            },
            {
                "type": "image_picker",
                "id": "backup_image",
                "label": "Back-up Image for video"
            }
        ],
        "blocks": [

        ],
        "presets": [
            {
                "name": "hero banner",
                "category": "General",
                "settings": {}
            }
        ]
    }
{% endschema %}