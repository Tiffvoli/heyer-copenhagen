<header id="site-nav" class="header">
  <div class="container">
    <div class="header_inmer">

      <nav class="nav" role="navigation" style="display: flex">
        {% for link in linklists[menu].links %}
       <div class="{{link.title}}" id="dropdown-wrapper">
       <a class="{% if link.active %}active{% endif %}"  href= "{{ link.url }}">
       <h4 class="menu_left_title">{{ link.title }}</h4>
       </a>
      
       <div class="dropdown-content">
       <a href="{{shop_link}}"> 
       <img src="{{ shop_img | img_url: 'master' }}" />
       <h2>{{shop_title}}</h2>
       </a>
       <a href="{{shop_link_2}}"> 
       <img src="{{ shop_img_2 | img_url: 'master' }}" />
       <h2>{{shop_title_2}}</h2>
       </a> 
       <a href="{{shop_link_3}}"> 
       <img src="{{ shop_img_3 | img_url: 'master' }}" />
       <h2>{{shop_title_3}}</h2>
       </a>
        <a href="{{shop_link_4}}"> 
       <img src="{{ shop_img_4 | img_url: 'master' }}" />
       <h2>{{shop_title_4}}</h2>
       </a>
       </div>

       <div class="dropdown-content-2">
       <a href="{{about_link}}"> 
       <img src="{{ about_img | img_url: 'master' }}" />
       <h2>{{about_title}}</h2>
       </a>
       <a href="{{about_link_2}}"> 
       <img src="{{ about_img_2| img_url: 'master' }}" />
       <h2>{{about_title_2}}</h2>
       </a> 
       <a href="{{about_link_3}}"> 
       <img src="{{ about_img_3 | img_url: 'master' }}" />
       <h2>{{about_title_3}}</h2>
       </a>
        <a href="{{about_link_4}}"> 
       <img src="{{ about_img_4 | img_url: 'master' }}" />
       <h2>{{about_title_4}}</h2>
       </a>
       </div>
       </div>
        {% endfor %}
        
      </nav>
      <a href="/index" class="logo_link"><img class="header_logo" src="{{ 'logo.svg' | asset_url}}"/></a>
      <nav class="nav" id="right_menu" role="navigation" style="display: flex">
         <a href="/pages/faqs"><div class="link_title">FAQ</div></a>
      {% if customer %}
          
           <a href="{{ routes.account_url }}"><div class="link_title">{{ 'layout.customer.account' | t }}</div></a>
        {% else %}
          
          <a href="{{ routes.account_login_url }}"><div class="link_title">Sign up</div></a>
        {% endif %}
       
      <div class="js-cart-trigger menu-cart">
      <div class="link_title">
        <span>Cart</span>
        <span class="js-cart-counter"></span>
        </div>
      </div>
</nav>
    </div>
</div>
</header>

