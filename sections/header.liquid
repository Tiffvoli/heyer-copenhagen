<header id="site-nav" class="header">
  <div class="container">
    <div class="header_inmer">

      <nav class="nav" id="left_menu" role="navigation" style="display: flex">
        {% for link in linklists[menu].links %}
       <div class="{{link.title}}" id="dropdown-wrapper">
       <a class="{% if link.active %}active{% endif %}"  href= "{{ link.url }}">
       {{ link.title }}
       </a>
      
       <div class="dropdown-content">
       <a href="{{shop_link}}"> 
       <img src="{{ shop_img | img_url: 'master' }}" />
       <h2>{{shop_title}}</h2>
       </a>
       <a href="{{shop_link_2}}"> 
       <img src="{{ shop_img_2 | img_url: 'master' }}" />
       <h2>{{shop_title_2}}</h2>
       </a> 
       <a href="{{shop_link_3}}"> 
       <img src="{{ shop_img_3 | img_url: 'master' }}" />
       <h2>{{shop_title_3}}</h2>
       </a>
        <a href="{{shop_link_4}}"> 
       <img src="{{ shop_img_4 | img_url: 'master' }}" />
       <h2>{{shop_title_4}}</h2>
       </a>
       </div>

       <div class="dropdown-content-2">
       <a href="{{about_link}}"> 
       <img src="{{ about_img | img_url: 'master' }}" />
       <h2>{{about_title}}</h2>
       </a>
       <a href="{{about_link_2}}"> 
       <img src="{{ about_img_2| img_url: 'master' }}" />
       <h2>{{about_title_2}}</h2>
       </a> 
       <a href="{{about_link_3}}"> 
       <img src="{{ about_img_3 | img_url: 'master' }}" />
       <h2>{{about_title_3}}</h2>
       </a>
        <a href="{{about_link_4}}"> 
       <img src="{{ about_img_4 | img_url: 'master' }}" />
       <h2>{{about_title_4}}</h2>
       </a>
       </div>
       </div>
        {% endfor %}
      </nav>
{%comment%} Mobile Header {%endcomment%}
    <nav role="navigation" id="left_menu-mobile" style="display: none">
    <div id="menuToggle">
    <input type="checkbox" />
  
    <span></span>
    <span></span>
    <span></span>
    
    <div id="menu">  
    <div class="menu_wrapper_mobile">   
      <a href="{{mobile_link_1}}"><h2>{{mobile_title_1}}</h2></a>
      <a href="{{mobile_link_2}}"><h2>{{mobile_title_2}}</h2></a>
      <a href="{{mobile_link_3}}"><h2>{{mobile_title_3}}</h2></a>
      <a href="{{mobile_link_4}}"><h2>{{mobile_title_4}}</h2></a>
     
      <h3>Best sellers</h3>
      <div class="best-sellers">
       <a href="{{best_seller_url_1}}"> 
       <img src="{{ best_seller_img_1 | img_url: 'master' }}" />
       <p>{{best_seller_title_1}}</p>
       </a>
       <a href="{{best_seller_url_2}}"> 
       <img src="{{ best_seller_img_2 | img_url: 'master' }}" />
       <p>{{best_seller_title_2}}</p>
       </a>
      </div>
    <div class="mobile_links">
      {% for link in linklists[menu_mobile].links %}
          <a class="{% if link.active %}active{% endif %}" href= "{{ link.url }}">{{ link.title }}</a>
        {% endfor %}     
    </div>
    <div class="mobile_links" id="mobile_account">
     {% if customer %}
          <a href="{{ routes.account_url }}"><p>{{ 'layout.customer.account' | t }}</p></a>
          <a href="{{ routes.account_login_url }}"><p>{{ 'layout.customer.log_out' | t }}</p></a>
        {% else %}
          <a href="{{ routes.account_register_url }}"><p>{{ 'layout.customer.create_account' | t }}</p></a>
          <a href="{{ routes.account_login_url }}"><p>{{ 'layout.customer.log_in' | t }}</p></a>
        {% endif %}
        </div>
        <div class="mobile_selector" style="height: 25rem">
          <div class="country-selector country-selector-mobile">
       <div class="dropdown">
       <a class="dropbtn" href="#">
       <img class="country-flag-menu country-flag-menu-mobile" src="{{ global_img | img_url: 'master' }}" />
        <p style="margin: 0">{{country_selector}}</p>
       </a>
       <div class="dropdown-content-mobile">
      {% if blocks %}
            {% for block in blocks %}
              {% assign block_settings = block.settings %}
              {% assign flag = block_settings.flag %}
              {% assign country = block_settings.country %}
              {% assign country_page = block_settings.country_page %}
                <a href="{{country_page}}"><img class="country-flag country-flag-mobile" src="{{ flag | img_url: 'master' }}"><p>{{country}}</p></a>
            {%endfor%}
      {%endif%}
       </div>
       </div>
       </div>
    </div>
    </div>
  </div>
  </div>
</nav>
{%comment%} End of Mobile Header {%endcomment%}
      <a href="/index" class="logo_link"><img class="header_logo" src="{{ 'logo.svg' | asset_url}}"/></a>
      <nav class="nav" id="right_menu" role="navigation" style="display: flex">
         <a href="/pages/faqs" class="header-faq">FAQ</a>
      {% if customer %}
          
           <a href="{{ routes.account_url }}" class="header-signup">{{ 'layout.customer.account' | t }}</a>
        {% else %} 
          
          <a href="{{ routes.account_login_url }}" class="header-signup">Sign up</a>
        {% endif %}
       
      <div class="js-cart-trigger menu-cart">
      <div id="suitcase_cart">
         <span class="js-cart-counter"></span>
        <img class="suitcase" src="{{ 'suitcase.svg' | asset_url}}"/>
        </div>
      </div>
</nav>
    </div>
</div>
</header>

<script>


var menu = document.querySelector("#menuToggle input");
var body = document.querySelector("body");

menu.addEventListener('click', () => {
  body.classList.toggle('overflow-hidden');
});

</script>
