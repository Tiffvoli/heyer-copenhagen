{% comment %} General {% endcomment %}
{%- assign section_settings = section.settings -%}
{%- assign menu = section_settings.menu -%}
{%- assign menu_logo = section_settings.menu_logo -%}
{%- assign shop_img = section_settings.shop_img -%}
{%- assign shop_link = section_settings.shop_link -%}
{%- assign shop_title= section_settings.shop_title-%}
{%- assign shop_img_2 = section_settings.shop_img_2 -%}
{%- assign shop_link_2 = section_settings.shop_link_2 -%}
{%- assign shop_title_2 = section_settings.shop_title_2 -%}
{%- assign shop_img_3 = section_settings.shop_img_3 -%}
{%- assign shop_link_3 = section_settings.shop_link_3 -%}
{%- assign shop_title_3 = section_settings.shop_title_3 -%}
{%- assign shop_img_4 = section_settings.shop_img_4 -%}
{%- assign shop_link_4 = section_settings.shop_link_4 -%}
{%- assign shop_title_4 = section_settings.shop_title_4 -%}

<header id="site-nav" class="header">
  <div class="container">
    <div class="header_inmer">

      <nav class="nav" role="navigation" style="display: flex">
        {% for link in linklists[menu].links %}
       <a class="{% if link.active %}active{% endif %}" id="{{link.title}}" href= "{{ link.url }}">
       <div class="link_title">{{ link.title }}</div>
       </a>

       <div class="dropdown-content-2">
       <a href="{{shop_link}}"> 
       <img src="{{ shop_img | img_url: 'master' }}" />
       <h2>{{shop_title}}</h2>
       </a>
       <a href="{{shop_link_2}}"> 
       <img src="{{ shop_img_2 | img_url: 'master' }}" />
       <h2>{{shop_title_2}}</h2>
       </a> 
       <a href="{{shop_link_3}}"> 
       <img src="{{ shop_img_3 | img_url: 'master' }}" />
       <h2>{{shop_title_3}}</h2>
       </a>
        <a href="{{shop_link_4}}"> 
       <img src="{{ shop_img_4 | img_url: 'master' }}" />
       <h2>{{shop_title_4}}</h2>
       </a>
       </div>   

       <div class="dropdown-content">
       <a href="{{shop_link}}"> 
       <img src="{{ shop_img | img_url: 'master' }}" />
       <h2>{{shop_title}}</h2>
       </a>
       <a href="{{shop_link_2}}"> 
       <img src="{{ shop_img_2 | img_url: 'master' }}" />
       <h2>{{shop_title_2}}</h2>
       </a> 
       <a href="{{shop_link_3}}"> 
       <img src="{{ shop_img_3 | img_url: 'master' }}" />
       <h2>{{shop_title_3}}</h2>
       </a>
        <a href="{{shop_link_4}}"> 
       <img src="{{ shop_img_4 | img_url: 'master' }}" />
       <h2>{{shop_title_4}}</h2>
       </a>
       </div>
       
        {% endfor %}
        
      </nav>
      <img class="header_logo" src="{{ 'logo.svg' | asset_url}}"/>
      <nav class="nav" role="navigation" style="display: flex">
         <a href="{{ routes.account_url }}"><div class="link_title">FAQ</div></a>
      {% if customer %}
          <a href="{{ routes.account_url }}"><div class="link_title">{{ 'layout.customer.account' | t }}</div></a>
          <a href="{{ routes.account_login_url }}"><div class="link_title">{{ 'layout.customer.log_out' | t }}</div></a>
        {% else %}
          <a href="{{ routes.account_register_url }}"><div class="link_title">{{ 'layout.customer.create_account' | t }}</div></a>
          <a href="{{ routes.account_login_url }}"><div class="link_title">{{ 'layout.customer.log_in' | t }}</div></a>
        {% endif %}
       
      <div class="js-cart-trigger menu-cart">
      <div class="link_title">
        <span>Cart</span>
        <span class="js-cart-counter"></span>
        </div>
      </div>
</nav>
    </div>
</div>
</header>
  {% stylesheet %}
  .dropdown-content-2{
    display: none;
    position: absolute;
    background-color: white;
    width: 100vw;
    z-index: 1;
    left: 0;
    top: 101%;
  }
  .dropdown-content{
    display: none;
    position: absolute;
    background-color: pink;
    width: 100vw;
    z-index: 1;
    left: 0;
    top: 101%;
  }

  .dropdown-content-2 a{
    width: 25%;
    padding: 30px 15px;
  }
  .dropdown-content-2 img{
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
  #Shop:hover +  .dropdown-content{
    display: flex;
    justify-content: space-between;
  }

  .dropdown-content-2 h2{
    padding-top: 0.5rem;
    font-size: 1.5rem;
  }
{% endstylesheet %} 

