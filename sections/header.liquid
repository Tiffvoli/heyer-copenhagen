<header id="site-nav" class="header">
  <div class="container">
    <div class="header_inmer">

      <nav class="nav" role="navigation" style="display: flex">
        {% for link in linklists[menu].links %}
       <div class="{{link.title}}" id="dropdown-wrapper">
       <a class="{% if link.active %}active{% endif %}"  href= "{{ link.url }}">
       <h4 class="menu_left_title">{{ link.title }}</h4>
       </a>
      
       <div class="dropdown-content">
       <a href="{{shop_link}}"> 
       <img src="{{ shop_img | img_url: 'master' }}" />
       <h2>{{shop_title}}</h2>
       </a>
       <a href="{{shop_link_2}}"> 
       <img src="{{ shop_img_2 | img_url: 'master' }}" />
       <h2>{{shop_title_2}}</h2>
       </a> 
       <a href="{{shop_link_3}}"> 
       <img src="{{ shop_img_3 | img_url: 'master' }}" />
       <h2>{{shop_title_3}}</h2>
       </a>
        <a href="{{shop_link_4}}"> 
       <img src="{{ shop_img_4 | img_url: 'master' }}" />
       <h2>{{shop_title_4}}</h2>
       </a>
       </div>

       <div class="dropdown-content-2">
       <a href="{{about_link}}"> 
       <img src="{{ about_img | img_url: 'master' }}" />
       <h2>{{about_title}}</h2>
       </a>
       <a href="{{about_link_2}}"> 
       <img src="{{ about_img_2| img_url: 'master' }}" />
       <h2>{{about_title_2}}</h2>
       </a> 
       <a href="{{about_link_3}}"> 
       <img src="{{ about_img_3 | img_url: 'master' }}" />
       <h2>{{about_title_3}}</h2>
       </a>
        <a href="{{about_link_4}}"> 
       <img src="{{ about_img_4 | img_url: 'master' }}" />
       <h2>{{about_title_4}}</h2>
       </a>
       </div>
       </div>
        {% endfor %}
        
      </nav>
      <img class="header_logo" src="{{ 'logo.svg' | asset_url}}"/>
      <nav class="nav" id="right_menu" role="navigation" style="display: flex">
         <a href="/pages/faqs"><div class="link_title">FAQ</div></a>
      {% if customer %}
          
           <a href="{{ routes.account_url }}"><div class="link_title">{{ 'layout.customer.account' | t }}</div></a>
        {% else %}
          
          <a href="{{ routes.account_login_url }}"><div class="link_title">{{ 'layout.customer.log_in' | t }}</div></a>
        {% endif %}
       
      <div class="js-cart-trigger menu-cart">
      <div class="link_title">
        <span>Cart</span>
        <span class="js-cart-counter"></span>
        </div>
      </div>
</nav>
    </div>
</div>
</header>
  {% stylesheet %}
  #right_menu{
   justify-content: flex-end;
  }
  #dropdown-wrapper{
    padding-right: 3rem;
    height: 100%;
  }
  .menu_left_title:hover{
    box-shadow: inset 0 -1px 0 black;
    color: $color-black;
  }
  .menu_left_title{
    margin-top: 0.6rem;
    height: 62%;
    margin-bottom: 0;
  }
  .dropdown-content,
  .dropdown-content-2{
    display: none;
    position: absolute;
    background-color: #ffffff;
    width: 100vw;
    z-index: 1;
    left: 0;
    top: 100%;
  }
  .Shop,
  .About{
      overflow: hidden;
      outline: none;
      border: none;
      margin: 0;
  }
  .dropdown-content a,
  .dropdown-content-2 a{
    width: 25%;
    padding: 30px 15px;
  }
  .dropdown-content img,
  .dropdown-content-2 img{
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
  .Shop:hover .dropdown-content,
  .About:hover .dropdown-content-2{
    display: flex;
    justify-content: space-between;
  }
  .dropdown-content h2,
  .dropdown-content-2 h2{
    padding-top: 0.5rem;
    font-size: 1.5rem;
  }
{% endstylesheet %} 

