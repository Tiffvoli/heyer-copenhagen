<section class="productHighlights">
<div class="highlights__flex">
<div class="highlight__highlights">
<a href="{{highlightLinkOne}}"><img src="{{highlightOne | img_url: 'master'}}"></a>
<h2>{{highlightOneTitle}}</h2>
<h4>{{highlightOneSubheading}}</h4>
</div>
<div class="highlight__highlights">
<a href="{{highlightLinkTwo}}"><img src="{{highlightTwo | img_url: 'master'}}"></a>
<h2>{{highlightTwoTitle}}</h2>
<h4>{{highlightTwoSubheading}}</h4>
</div>
