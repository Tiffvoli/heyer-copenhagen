{% assign section_setting = section.settings  %}
{% assign highlightOne = section_setting.highlightOne %}
{% assign highlightLinkOne = section_setting.highlightLinkOne %}
{% assign highlightOneTitle = section_setting.highlightOneTitle %}
{% assign highlightOneSubheading = section_setting.highlightOneSubheading %}
