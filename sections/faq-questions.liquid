                        <label class="faq-tab-label" for="{{corporation_questions | handleize}}">{{corporation_questions}}</label>
                        <div class="faq-tab-content">
                            {{corporation_answers}}
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
                </div>
                <a name="other">Other</a>
                <div class="faq-tabs">
                {% for block in blocks %}
                    {% if block.type =='other_questions' %}
