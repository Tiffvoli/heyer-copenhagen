                        <div class="faq-tab-content">
                            {{corporation_answers}}
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
                </div>
            </div>
            <div class="faq-content-right">
                <a href="#shipping-returns">Shipping & Returns</a>
                <a href="#warranty">Warranty</a>
                <a href="#products">Products</a>
                <a href="#personalisation">Personalisation</a>
                <a href="#impact">Impact</a>
                <a href="#corporate-gifting">Corporate Gifting</a>
                <a href="#other">Other</a>
                <a href="">Chat with a human</a>
                <a href="">Talk with our Experts</a>
            </div>
        </div>
    </div>
</section>

