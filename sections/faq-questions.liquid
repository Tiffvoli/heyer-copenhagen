{% assign section_settings = section.settings  %}
{% assign faq_heading = section_settings.faq_heading %}
{% assign faq_heading_banner = section_settings.faq_heading_banner %}
{% assign blocks = section.blocks %}

<section class="container section">
    <div class="faq-wrapper">
        <div class="faq-heading">
            <h2>{{faq_heading}}</h2>
        </div>
        <div class="faq-content">
            <div class="faq-content-left">
                <h3>{{faq_heading_banner}}</h3>
            </div>
            <div class="faq-content-middle">
                <a name="shipping-returns">Shipping & Returns</a>
                {%comment%} Accordion FAQ {%endcomment%}
                <div class="faq-tabs">
                {% for block in blocks %}
                    {% if block.type =='shippingreturns_questions' %}
                        {% assign block_settings = block.settings %}
                        {% assign shipping_returns_questions = block_settings.shipping_returns_questions %}
                        {% assign shipping_returns_answers = block_settings.shipping_returns_answers %}
                    <div class="faq-tab">
                        <input class="faq-input" type="checkbox" id="{{shipping_returns_questions | handleize}}">
                        <label class="faq-tab-label" for="{{shipping_returns_questions | handleize}}">{{shipping_returns_questions}}</label>
                        <div class="faq-tab-content">
                            {{shipping_returns_answers}}
                        </div>
                    </div>
                    {%endif%}
                {% endfor %}
                {%comment%} End accordion FAQ {%endcomment%}          
                </div>
                <a name="warranty">Warranty</a>
                <div class="faq-tabs">
                {% for block in blocks %}
                    {% if block.type =='warranty_questions' %}
                        {% assign block_settings = block.settings %}
