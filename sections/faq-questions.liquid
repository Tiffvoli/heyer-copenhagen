                        <div class="faq-tab-content">
                            {{warranty_answers}}
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
                </div>
                <a name="products">Products</a>
                <div class="faq-tabs">
                {% for block in blocks %}
                    {% if block.type =='product_questions' %}
                        {% assign block_settings = block.settings %}
