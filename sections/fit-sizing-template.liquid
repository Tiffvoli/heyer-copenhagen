                "id": "fitsizing_description",
                "label": "Description"
            }
        ],
        "blocks": [
    {
        "type": "product_features",
        "name": "Product Features",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_banner",
            "label": "Image banner"
          },
          {
            "type": "url",
            "id": "product_image",
            "label": "Product image"
          },
           {
            "type": "text",
            "id": "product_name",
            "label": "Product name"
          },
          {
            "type": "text",
            "id": "exterior_label",
            "label": "Exterior label"
          },
          {
            "type": "textarea",
            "id": "exterior_description",
            "label": "Exterior description"
          },
          {
            "type": "text",
            "id": "interior_label",
            "label": "Interior label"
          },
          {
            "type": "textarea",
            "id": "interior_description",
            "label": "Interior description"
          },
          {
            "type": "text",
