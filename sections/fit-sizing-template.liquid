{% assign section_settings = section.settings  %}
{% assign fitsizing_heading = section_settings.fitsizing_heading %}
{% assign fitsizing_description = section_settings.fitsizing_description %}
{% assign blocks = section.blocks %}

<section class="container">
    <div class="helpCenter-header">
        <h2 class="helpCenter-h2"> {{fitsizing_heading}} </h2>
        <div class="helpCenter-p">
        {{fitsizing_description}}
        </div>
    </div>
    {% if blocks %}
  {% for block in blocks %}
    {% assign block_settings = block.settings %}
    {% assign image_banner = block_settings.image_banner %}
    {% assign product_image = block_settings.product_image %}
    {% assign product_name = block_settings.product_name %}
    {% assign exterior_label = block_settings.exterior_label %}
    {% assign exterior_description = block_settings.exterior_description %}
    {% assign interior_label = block_settings.interior_label %}
    {% assign interior_description = block_settings.interior_description %}
    {% assign features_label = block_settings.features_label %}
    {% assign features_description = block_settings.features_description %}
    <div class="productSizing">
        <div class="productSizing-left">
            <img data-src="{{ image_banner | img_url: 'master' }}" class="lazy"/>
        </div>
         <div class="productSizing-middle">
            <img data-src="{{product_image}}" class="lazy"/>
        </div>
         <div class="productSizing-right">
            <h2> {{product_name}} </h2>
            <div class="tabs">
                <div class="tab">
                    <input class="accordion-input" type="checkbox" id="{{product_name | handleize}}-exterior-size">
                    <label class="tab-label" for="{{product_name | handleize}}-exterior-size">{{exterior_label}}</label>
                    <div class="tab-content">
                        {{exterior_description}}
                    </div>
                </div>
                <div class="tab">
                    <input class="accordion-input" type="checkbox" id="{{product_name | handleize}}-interior-size">
                    <label class="tab-label" for="{{product_name | handleize}}-interior-size">{{interior_label}}</label>
                    <div class="tab-content">
                        {{interior_description}} 
                    </div>
                </div>
                <div class="tab">
                    <input class="accordion-input" type="checkbox" id="{{product_name | handleize}}-features">
                    <label class="tab-label" for="{{product_name | handleize}}-features">{{features_label}}</label>
                    <div class="tab-content">
                        {{features_description}} 
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endif %}
</section>

