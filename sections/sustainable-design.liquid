{% assign section_setting = section.settings  %}
{% assign title = section_setting.Title %}
{% assign buttonText = section_setting.buttonText %}
{% assign buttonLink = section_setting.buttonLink %}
{% assign image_one = section_setting.image_one %}
{% assign image_two = section_setting.image_two %}



<section class="container sustainableDesign" style="display: flex">
<div class="sustainableDesign__overlay">
<h2>{{title}}</h2>
{% if buttonText != blank and buttonLink != blank %}  
<a class="button" href="{{buttonLink}}"> {{buttonText}} </a>
{% endif %}
</div>
<img src="{{image_one | img_url: 'master'}}">
<img class="sustainableDesign__img-2" src="{{image_two | img_url: 'master'}}">
</section>


{% stylesheet %}
    .sustainableDesign{
        display: flex;
        background-color: white;
    }
    .sustainableDesign img{
        object-fit: cover;
        width: 50%;
        height: 85vh;
    }
    .sustainableDesign__overlay{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
    }
    .sustainableDesign__overlay h2{
        font-size: 3rem;
    }
    .sustainableDesign__img{
        display: flex;
    }
    @media (max-width: 480px) {
        .sustainableDesign__img-2{
            display: none;
        }
        .sustainableDesign img{
        object-fit: cover;
        width: 100%;
        height: 85vh;
    }
    }
{% endstylesheet %}


