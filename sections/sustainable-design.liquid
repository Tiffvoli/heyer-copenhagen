{% assign section_setting = section.settings  %}
{% assign title = section_setting.Title %}
{% assign buttonText = section_setting.buttonText %}
{% assign buttonLink = section_setting.buttonLink %}
{% assign image_one = section_setting.image_one %}
{% assign image_two = section_setting.image_two %}



<section class="container sustainableDesign" style="display: flex; justify-content: space-between ">
<div class="sustainableDesign__overlay">
<h2>{{title}}</h2>
{% if buttonText != blank and buttonLink != blank %}  
<a class="button" href="{{buttonLink}}"> {{buttonText}} </a>
{% endif %}
</div>
<img data-src="{{image_one | img_url: 'master'}}" class="lazy"/>
<img class="sustainableDesign__img-2 lazy" data-src="{{image_two | img_url: 'master'}}">
</section>

{% schema %}
    {
        "name": "Sustainable Design",
        "settings": [
            {
                "type": "header",
                "content": "Title & Subheading"
            },
            {
                "type": "text",
                "id": "Title",
                "label": "Title"
            },
            {
                "type": "header",
                "content": "Button"
            },
            {
                "type": "text",
                "id": "buttonText",
                "label": "buttonText"
            },
            {
                "type": "url",
                "id": "buttonLink",
                "label": "buttonLink"
            },
            {
                "type": "header",
                "content": "Images"
            },
            {
                "type": "image_picker",
                "id": "image_one",
                "label": "Image 1"
            },
            {
                "type": "image_picker",
                "id": "image_two",
                "label": "Image 2"
            }
        ],
        "blocks": [

        ],
        "presets": [
            {
                "name": "sustainable design",
                "category": "General",
                "settings": {}
            }
        ]
    }
{% endschema %}