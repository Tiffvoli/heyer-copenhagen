{% assign section_settings = section.settings  %}
{% assign block_image = section_settings.block_image %}
{% assign block_subheading = section_settings.block_subheading %}
{% assign block_title = section_settings.block_title %}
{% assign block_p = section_settings.block_p %}
{% assign block_link = section_settings.block_link %}
{% assign link_title = section_settings.link_title %}
{% assign bg_colour = section_settings.bg_colour %}

<section class="flip-block-wrapper" style="border-top: none">
{%comment%} Img Text Block {%endcomment%}
    <div class="block-flex-black" style="background-color: {{bg_colour}}">
        <img class="block-img block-padding-right" src="{{ block_image | img_url: 'master' }}"/>
        <div class="block-text-white block-padding-left">
        {% if block_subheading != blank %}
            <p> {{block_subheading}} </p>
        {% endif %}
            <h2> {{block_title}} </h2>
            <p> {{block_p}} </p>
        {% if block_link != blank and link_title != blank %}
            <a href="{{block_link}}">{{link_title}}</a>
        {%endif%}
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Single Flip Block",
        "settings": [
            {
                "type": "header",
                "content": "Image Text Block"
            },
            {
                "type": "image_picker",
                "id": "block_image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "block_subheading",
                "label": "Subheading"
            },
            {
                "type": "text",
                "id": "block_title",
                "label": "Heading"
            },
            {
                "type": "textarea",
                "id": "block_p",
                "label": "Content"
            },
            {
                "type": "url",
                "id": "block_link",
                "label": "Link"
            },
            {
                "type": "text",
                "id": "link_title",
                "label": "Link title"
            },
            {
                "type": "header",
                "content": "Text Image Block"
            },
            {
                "type": "color",
                "id": "bg_colour",
                "label": "Background colour"
            }
        ],
        "blocks": [

        ],
        "presets": [
            {
                "name": "flip block",
                "category": "General",
                "settings": {}
            }
        ]
    }
{% endschema %}