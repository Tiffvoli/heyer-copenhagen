{% assign section_settings = section.settings  %}
{% assign block_image = section_settings.block_image %}
{% assign block_subheading = section_settings.block_subheading %}
{% assign block_title = section_settings.block_title %}
{% assign block_p = section_settings.block_p %}
{% assign block_link = section_settings.block_link %}
{% assign link_title = section_settings.link_title %}
{% assign bg_colour = section_settings.bg_colour %}
{% assign block_image_2 = section_settings.block_image_2 %}
{% assign block_subheading_2 = section_settings.block_subheading_2 %}
{% assign block_title_2 = section_settings.block_title_2 %}
{% assign block_p_2 = section_settings.block_p_2 %}
{% assign block_link_2 = section_settings.block_link_2 %}
{% assign link_title_2 = section_settings.link_title_2 %}

<section class="flip-block-wrapper" style="border-top: none">
{%comment%} Img Text Block {%endcomment%}
    <div class="block-flex-black">
        <img class="block-img block-padding-right lazy" data-src="{{ block_image | img_url: 'master' }}"/>
        <div class="block-text-white block-padding-left">
        {% if block_subheading != blank %}
            <p> {{block_subheading}} </p>
        {% endif %}
            <h2> {{block_title}} </h2>
            <p> {{block_p}} </p>
            <a href="{{block_link}}">{{link_title}}</a>
        </div>
    </div>
{%comment%} Img Text Block {%endcomment%}
    <div class="block-flex reverse-column-ipad" style="background-color: {{bg_colour}}">
        <div class="block-text block-padding-left">
        {% if block_subheading_2 != blank %}
            <p> {{block_subheading_2 }} </p>
        {% endif %}
            <h2> {{block_title_2}} </h2>
            <p style="color: #4c4c4b"> {{block_p_2}} </p>
            {% if block_link_2 != blank and link_title_2 != blank %}
            <a href="{{block_link_2}}">{{link_title_2}}</a>
            {% endif %}
        </div>
        <img class="block-img block-padding-right lazy" data-src="{{ block_image_2 | img_url: 'master' }}"/>
    </div>
</section>

