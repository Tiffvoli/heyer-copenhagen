<section class="page section">
  <div class="container">

    <header class="page_header">
      <h1 class="page_title">{{ 'customer.register.title' | t }}</h1>
    </header>

    <div class="page_content">

      {% comment %} Register form {% endcomment %}
      {%- assign formId = 'RegisterForm' -%}
      {% form 'create_customer', id: 'RegisterForm', novalidate: 'novalidate', class: 'form form-small' %}

        {% comment %} Form errors {% endcomment %}
        {%- if form.errors -%}
          <div class="formMessage">
            <h3 class="formMessage_title" tabindex="-1" data-form-status>{{ 'contact.form.error_heading' | t }}</h3>
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        {% comment %} Form fields {% endcomment %}
        <div class="formGroup">
          <label class="label" for="{{ formId }}-FirstName">{{ 'customer.register.first_name' | t }}</label>
          <input
            type="text"
            name="customer[first_name]"
            id="{{ formId }}-FirstName"
            class="input input-dark"
            value=""
            placeholder="{{ 'customer.register.first_name' | t }}"
          >
        </div>

        <div class="formGroup">
          <label class="label" for="{{ formId }}-LastName">{{ 'customer.register.last_name' | t }}</label>
          <input
            type="text"
            id="{{ formId }}-LastName"
            class="input input-dark"
            value=""
            placeholder="{{ 'customer.register.last_name' | t  }}"
          >
        </div>

        <div class="formGroup">
          <label class="label" for="{{ formId }}-Email">{{ 'customer.register.email' | t }}*</label>
          <input
            type="email"
            name="customer[email]"
            id="{{ formId }}-email" 
            class="input input-dark"
            value=""
            placeholder="{{ 'customer.register.email' | t }}"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            required
          >
        </div>

        <div class="formGroup">
          <label class="label" for="{{ formId }}-Password">{{ 'customer.register.password' | t }}*</label>
          <input
            type="password"
            name="customer[password]"
            id="{{ formId }}-password"
            class="input input-dark"
            value=""
            placeholder="{{ 'customer.register.password' | t }}"
            required
          >
        </div>

        {% comment %} Accept marketing checkbox {% endcomment %}
        <div class="formGroup">
          <div class="checkbox">
              <input id="{{ formId }}-AcceptsMarketing" name="customer[accepts_marketing]" type="checkbox" value="true" checked="checked">
              <label class="checkbox_text" for="{{ formId }}-AcceptsMarketing">{{ 'customer.register.accept_marketing_text_html' | t }}</p>
          </div>
        </div>

        {% comment %} Form submit {% endcomment %}
        <button class="button" type="submit">{{ 'customer.register.submit' | t }}</button>

      {% endform %}
    
    </div>
  </div>
</section>
