//Article template
.articleBanner {
  display: flex;
  justify-content: space-between;
  height: auto;
}
.articleBanner-left {
  width: auto;
  min-width: auto;
  padding: 40px 60px 0 0;
  flex-direction: column;
  justify-content: center;
  display: flex;
}
.articleBanner-right {
  width: auto;
  max-width: 50%;
  display: flex;
  padding-top: 40px;
  max-height: 80vh;
}
.articleBanner-right img {
  object-fit: cover;
}
.articleWrapper {
  padding: 80px 10% 0;
  display: flex;
  color: $color-text-grey;
}
.article-left {
  width: 70%;
  padding-right: 60px;
  border-right: 0.2px solid #e3e3e3;
}
.article-right {
  width: 30%;
  padding-left: 60px;
}
.article-right img {
  width: 100%;
  height: auto;
  object-fit: cover;
  object-position: 50% 0;
}
.articleWrapper p {
  font-family: $font-body;
  font-size: 1.8rem;
  line-height: 2.8rem;
  letter-spacing: 0.5px;
  font-weight: normal;
}
.articleWrapper h6 {
  font-size: 1.2rem;
}
.articleWrapper h3 {
  font-size: 2.1rem;
  font-weight: normal;
  padding: 10px 0;
}
.articleWrapper a {
  color: $color-text-grey;
}
.article-bottom {
  display: grid;
  grid-auto-columns: 1fr;
  grid-column-gap: 60px;
  grid-row-gap: 16px;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: auto auto;
}
.article-bottom img {
  width: 100%;
  height: 350px;
  object-fit: cover;
  object-position: 50% 0;
}
.readmoreWrapper {
  border-bottom: 0.2px solid #e3e3e3;
  padding-top: 8rem;
  padding-bottom: 8rem;
}
.readmoreWrapper h1 {
  padding: 2rem 0;
  font-size: 3rem;
  font-weight: normal;
  color: $color-text-grey;
}
.readmoreWrapper h2 {
  font-size: 1.8rem;
}
@media (max-width: 480px) {
  .articleBanner,
  .articleWrapper {
    display: block;
  }
  .articleWrapper {
    padding: 30px 3%;
  }
  .articleBanner-left,
  .articleBanner-right,
  .article-left,
  .article-right {
    max-width: 100%;
    padding-left: 0;
    padding-right: 0;
  }
  .articleBanner-right img {
    object-fit: cover;
    height: 60vh;
  }
  .article-left,
  .article-right {
    border: none;
    width: 100%;
    margin-bottom: 50px;
    padding-bottom: 30px;
    border-bottom: 0.2px solid #e3e3e3;
  }
  .readmoreWrapper {
    display: none;
  }
}
