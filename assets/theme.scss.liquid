  padding: 25px;
  height: 40px;
  line-height: 0px;
  min-width: 100px;
  text-align: center;
  text-transform: capitalize;
  position: relative;
  box-sizing: border-box;
  outline: none;
  -webkit-appearance: none;
  cursor: pointer;
  letter-spacing: 1px;

  &:disabled {
    cursor: not-allowed;
    opacity: 0.85;
  }
}
