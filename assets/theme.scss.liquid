// Font
@font-face {
  font-family: "CalibreMedium";
  font-display: fallback;
  src: url("./Calibre-Medium.woff") format("woff");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "CalibreRegular";
  font-display: fallback;
  src: url("./Calibre-Regular.woff") format("woff");
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: "CalibreThin";
  font-display: fallback;
  src: url("./Calibre-Thin.woff") format("woff");
  font-weight: normal;
  font-style: normal;
}

$font-header: "CalibreMedium", sans-serif;
$font-body: "CalibreRegular", sans-serif;
$font-text: "CalibreThin", sans-serif;
// Colors
$color-white: rgba(255, 255, 255, 1);
$color-dark-grey: rgba(215, 215, 215, 1);
$color-light-grey: rgba(246, 246, 246, 1);
$color-black: rgba(0, 0, 0, 1);
$color-light-green: rgba(173, 218, 27, 1);
$color-text-grey: rgba(128, 130, 132, 1);
$color-hover-grey: rgba(76, 76, 75, 1);
$color-green: rgba(92, 194, 85, 1);
$color-darker-grey: #4c4c4b;
// Container
$container-padding-phone: 3%;
$container-padding-tablet: 3%;
$container-padding-desktop: 3%;

// General
html,
body {
  padding: 0;
  margin: 0;
}

html {
  font-size: 62.5%;
}

body {
  background-color: $color-white;
  font-family: $font-body;
  font-size: 1.4rem;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  letter-spacing: 1px;
}
body.locked {
  overflow: hidden;
}

// Typography
h1,
h2,
h3,
h5,
h6 {
  font-family: $font-header;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
  letter-spacing: 1px;
}

h1 {
  font-size: 5.2rem;
}

h2 {
  font-size: 4.2rem;
  font-family: $font-body;
  font-weight: normal;
}
h4 {
  font-family: $font-body;
  font-size: 1.4rem;
  font-weight: normal;
  letter-spacing: 1px;
}
p {
  font-family: $font-text;
  font-size: 1.6rem;
  line-height: 1.25;
  margin: 0 0 10px;
}

// Links
a,
a:active,
a:hover,
a:visited {
  text-decoration: none;
}

img,
picture {
  width: 100%;
  max-width: 100%;
  display: inline-block;
}

// Layout
.main {
}

.container {
