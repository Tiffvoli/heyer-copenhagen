    box-shadow: none;
    outline: none;
  }
}

.input[type="email"],
.input[type="search"],
.input[type="tel"],
.input[type="password"],
.input[type="text"] {
  box-sizing: border-box;
  height: 60px;
  line-height: 60px;
  -webkit-appearance: none;
}

.input::placeholder {
  /* Chrome, Firefox, Opera, Safari 10.1+ */
  color: $color-black;
  opacity: 1; /* Firefox */
}

.input:-ms-input-placeholder {
  /* Internet Explorer 10-11 */
  color: $color-black;
}

.input::-ms-input-placeholder {
  /* Microsoft Edge */
  color: $color-black;
}

.input-textarea,
textarea {
  box-sizing: border-box;
  padding: 10px 20px;
  -webkit-appearance: none;
  resize: none;
}

// Custom checkbox
.checkbox {
  width: 100%;
  position: relative;
  display: flex;

  input {
    background: transparent;
    background-color: transparent;
    border: 1px solid $color-black;
    border-radius: 5px;
    cursor: pointer;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    height: 25px;
    width: 25px;
    overflow: hidden;
    outline: none;
    display: flex;
    justify-content: center;
    align-items: center;
    -webkit-appearance: none;

    &:checked {
      background-color: $color-black;
      color: $color-white;

      &::after {
        text-transform: none;
        letter-spacing: 0;
        font-variant: initial;
        line-height: 1;
        content: "accept";
        // content: url({{ 'icon-checkmark-white.svg' | asset_url }});
      }
    }
  }

  label {
    font-size: 1.8rem;
    line-height: normal;
    text-align: left;
    margin-left: 40px;

    &:hover {
      cursor: pointer;
    }

    a {
      color: inherit;
      text-decoration: underline;
    }
  }
}

// Custom select
