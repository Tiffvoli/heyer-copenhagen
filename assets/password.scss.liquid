// Colors
$color-white: rgba(255, 255, 255, 1);
$color-light-grey: rgba(246, 246, 246, 1);
$color-black: rgba(0, 0, 0, 1);

/* Password Page */
.password {
  position: relative;
  background-color: $color-light-grey;
  width: calc(100% - 50px);
  height: calc(100vh - 50px);
  margin: 25px;
  border-radius: 60px;

  @media (min-width: 768px) {
    width: calc(100% - 100px);
    height: calc(100vh - 100px);
    margin: 50px;
  }
}

.password_container {
  text-align: center;
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.password_content {
  max-width: 100%;
  width: 85%;
  margin: 0 auto;
  padding: 20px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

  @media (min-width: 768px) {
    max-width: 768px;
    width: unset;
    margin: 0 auto;
  }
}

.password_heading {
  font-size: 3.8rem;
  line-height: 1.03;

  @media (min-width: 768px) {
    font-size: 7.2rem;
    font-weight: bold;
    line-height: 1.03;
  }
}

.password header {
  margin-bottom: 65px;
}

.password .button {
  margin-top: 10px;
}

