// Font
@font-face {
  font-family: "CalibreMedium";
  font-display: fallback;
  src: url("./Calibre-Medium.woff") format("woff");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "CalibreRegular";
  font-display: fallback;
  src: url("./Calibre-Regular.woff") format("woff");
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: "CalibreThin";
  font-display: fallback;
  src: url("./Calibre-Thin.woff") format("woff");
  font-weight: normal;
  font-style: normal;
}

$font-header: "CalibreMedium", sans-serif;
$font-body: "CalibreRegular", sans-serif;
$font-text: "CalibreThin", sans-serif;
// Colors
$color-white: rgba(255, 255, 255, 1);
$color-dark-grey: rgba(215, 215, 215, 1);
$color-light-grey: rgba(246, 246, 246, 1);
$color-black: rgba(0, 0, 0, 1);
$color-light-green: rgba(173, 218, 27, 1);
$color-text-grey: rgba(128, 130, 132, 1);
$color-hover-grey: rgba(76, 76, 75, 1);
$color-green: rgba(92, 194, 85, 1);
$color-dark-grey-text: #333;
// Container
$container-padding-phone: 3%;
$container-padding-tablet: 3%;
$container-padding-desktop: 3%;

//Heyer Life header
.heyerlifeWrapper {
  background-image: -webkit-gradient(
    linear,
    left top,
    left bottom,
    from(#f3f4ee),
    color-stop(25%, #f3f1e8),
    color-stop(50%, #f1efe9),
    color-stop(75%, #f0eee2),
    color-stop(103%, #f1efe1)
  );
  background-image: linear-gradient(
    180deg,
    #f3f4ee,
    #f3f1e8 25%,
    #f1efe9 50%,
    #f0eee2 75%,
    #f1efe1 103%
  );
}
.heyerlifeHeader {
  z-index: 100;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  height: 60px;
  background-color: $color-black;
  color: $color-white;
}
.heyerLife {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  height: 100%;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}
.heyerlife-logo-wrapper {
  width: 15%;
}
.heyerlife-logo {
  width: 60px;
}
.heyerlife-links-wrapper {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: auto;
  height: 100%;
  padding-top: 0px;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-align-self: center;
  -ms-flex-item-align: center;
  align-self: center;
}
.heyerlife-links-wrapper a,
.heyerlife-login-wrapper a {
  color: $color-white;
  align-self: center;
  margin: 0 10px;
  border-bottom: 0.2px solid $color-black;
}
.heyerlife-links-wrapper a:hover,
.heyerlife-login-wrapper a:hover {
  border-bottom: 0.2px solid #e3e3e3;
}
.heyerlife-login-wrapper {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 15%;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
  -ms-flex-pack: end;
  justify-content: flex-end;
  text-align: right;
}

//Heyer life banner
.heyerlifeBanner {
  position: relative;
  height: 80vh;
}
.heyerlifeBanner video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.heyerlifeBanner_overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: $color-white;
  width: 100%;
}
.heyerlifeBanner_overlay a {
  color: $color-white;
}
.heyerlife-subheading p {
  font-size: 2.7rem;
  line-height: 30px;
  font-family: "CalibreRegular", sans-serif;
  margin: 0 0 20px;
  font-weight: bold;
}
//Heyerlife frontapge culture
.heyerlifeCulture {
  width: 100%;
  color: $color-dark-grey-text;
}
.heyerlife-wrapper {
  width: 100%;
  display: flex;
  border-bottom: 0.2px solid grey;
  padding-bottom: 50px;
  padding-top: 15px;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  color: $color-dark-grey-text;
}
.heyerlifeCulture-text,
.heyerlifeCulture-img {
  width: 50%;
  height: auto;
}
.heyerlifeCulture-text {
  padding-right: 10%;
  box-sizing: border-box;
}
.heyerlifeCulture-text a,
.heyerlifeCulture-text p {
  font-family: "CalibreThin", sans-serif;
  font-size: 1.4rem;
  font-weight: 600;
  margin: 10px 0;
}
.heyerlifeCulture-text a {
  width: 150px;
  margin-top: 20px;
  padding: 15px 25px 11px;
  border: 0.1px solid #4c4c4b;
  color: #4c4c4b;
  line-height: 14px;
  text-align: center;
}
.heyerlifeCulture-img img {
  height: 80vh;
  object-fit: cover;
  object-position: 50% 0%;
}
//Heyer life footer
.heyerlifeFooter {
  display: flex;
  box-sizing: border-box;
  height: 60vh;
  padding-top: 40px;
  padding-bottom: 40px;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  text-align: center;
  color: #4c4c4b;
}
.heyerlifeFooter img {
  width: 80px;
}
.heyerlifeFooter h2 {
  font-size: 3.2rem;
  padding: 20px 0 10px;
  margin: 0;
}
.heyerlifeFooter p,
.heyerlifeFooter a {
  font-size: 1.3rem;
  color: #4c4c4b;
  margin: 10px 0;
  font-weight: 600;
  font-family: $font-text;
}
.heyerlifeFooter a {
  width: 150px;
  margin-top: 20px;
  padding: 15px 25px 11px;
  border: 0.1px solid #4c4c4b;
  color: #4c4c4b;
  line-height: 14px;
  text-align: center;
}
//Heyer life culture
.culture-header {
  padding: 120px 0 10px;
  text-align: center;
}
.culture-header h2 {
  color: $color-text-grey;
  font-size: 3rem;
}
