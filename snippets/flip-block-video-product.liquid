
{%comment%} Video Text Block {%endcomment%}
{% if product.metafields["global"]["flip-block-4-video-mp4"] != blank and product.metafields["global"]["flip-block-4-video-webm"] != blank and product.metafields["global"]["flip-block-4-text"] != blank%}
