        <video autoplay loop autobuffer muted playsinline width="100%" class="lazy block-img">
            <source data-src="{{ product.metafields["global"]["flip-block-4-video-mp4"] }}" type="video/mp4">
            <source data-src="{{ product.metafields["global"]["flip-block-4-video-webm"] }}" type="video/webm">
        </video>
        <div class="block-text block-padding-left">
            {{ product.metafields["global"]["flip-block-4-text"] }}
        </div>
    </div>
{%endif%}
